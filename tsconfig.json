{
  "compilerOptions": {
    "strict": true,
    "lib": ["es2018", "dom"],
    "target": "es2018",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "strictNullChecks": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "custom.d.ts", "gatsby/**/*"],
  "exclude": ["node_modules", "public"]
}
